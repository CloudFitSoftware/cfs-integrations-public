{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "acrServer": {
          "type": "string",
          "defaultValue": "cfsintegrations.azurecr.io",
          "metadata": {
              "description": "Your Azure Container registry server hosting the image"
          }
        },
        "acrAdminUsername": {
            "type": "string",
            "defaultValue": "cfsintegrations",
            "metadata": {
                "description": "Your Azure Container registry admin username"
            }
        },
        "acrAdminPassword": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Your Azure Container registry password username"
          }
        },
        "cfsBaseUrl": {
            "type": "string",
            "defaultValue": "https://api.cloudfitonline.com",
            "metadata": {
                "description": "The Base URL of CFS"
            }
        },
        "cfsBlockId": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "The CFS Block Id you want to push status updates to"
            }
        },
        "scenarioName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Enter a short name to describe the managed scenario"
            }
        },
        "appServiceResourceGroup": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Enter the name of the app service resource group"
            }
        },
        "appServiceName": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "Enter the name of the app service"
          }
        },
        "validateSwap": {
          "type": "bool",
          "defaultValue": "",
          "metadata": {
              "description": "Value to denote whether or not we should check for a swap along with a deployment."
          } 
        },
        "deploymentSchedule": {
          "type": "string",
          "defaultValue": "",
          "metadata": {
              "description": "CRON Expression representing the deployment schedule. (i.e. '* 13,18, * * *' would be an app that deploys daily at 1 and 6 pm)"
          }
        },
        "hoursStaleThreshold": {
          "type": "int",
          "defaultValue": "",
          "metadata": {
              "description": "Number of hours to allow before notifying CFS the app serivce has gone stale based on the deployment schedule."
          } 
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "name": "[concat('cfs-stale-app-service-monitor-', parameters('scenarioName'))]",
            "location": "[resourceGroup().location]",
            "identity": {
              "type": "SystemAssigned"
            },
            "properties": {
              "containers": [
                {
                  "name": "[concat('cfs-stale-app-service-monitor-', parameters('scenarioName'))]",
                  "properties": {
                    "image": "cfsintegrations.azurecr.io/cfs-stale-app-service-monitor:6841da9d95f9b1a24d0c1b8b59db6843032ff257",
                    "ports": [],
                    "resources": {
                      "requests": {
                        "cpu": 1,
                        "memoryInGB": 1
                      }
                    },
                    "environmentVariables": [
                        {
                            "name": "BlockId",
                            "value": "[parameters('cfsBlockId')]"
                        },
                        {
                            "name": "CfsBaseUrl",
                            "value": "[parameters('cfsBaseUrl')]"
                        },
                        {
                            "name": "Subscription",
                            "value":  "[subscription().subscriptionId]"
                        },
                        {
                            "name": "AppServiceResourceGroup",
                            "value": "[parameters('appServiceResourceGroup')]"
                        },
                        {
                            "name": "AppServiceName",
                            "value": "[parameters('appServiceName')]"
                        },
                        {
                            "name": "ValidateSwap",
                            "value": "[parameters('validateSwap')]"
                        },
                        {
                          "name": "DeploymentSchedule",
                          "value": "[parameters('deploymentSchedule')]"
                        },
                        {
                          "name": "StaleThreshold",
                          "value": "[parameters('hoursStaleThreshold')]"
                        }
                      ]
                  }
                }
              ],
              "imageRegistryCredentials": [
                {
                  "server": "[parameters('acrServer')]",
                  "username": "[parameters('acrAdminUsername')]",
                  "password": "[parameters('acrAdminPassword')]"
                }
              ],
              "osType": "Linux",
              "restartPolicy": "Always"
            }
          }
    ],
    "outputs": {
    }
}