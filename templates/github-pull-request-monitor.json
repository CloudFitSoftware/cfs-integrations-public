{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "acrServer": {
      "type": "string",
      "defaultValue": "cfsintegrations.azurecr.io",
      "metadata": {
        "description": "Your Azure Container registry server hosting the url-monitor image"
      }
    },
    "acrAdminUsername": {
      "type": "string",
      "defaultValue": "cfsintegrations",
      "metadata": {
        "description": "Your Azure Container registry admin username"
      }
    },
    "acrAdminPassword": {
      "type": "string",
      "metadata": {
        "description": "Your Azure Container registry password username"
      }
    },
    "cfsBaseUrl": {
      "type": "string",
      "defaultValue": "https://api.cloudfitonline.com",
      "metadata": {
        "description": "The Base URL of CFS (no ending slash)"
      }
    },
    "cfsBlockId": {
      "type": "string",
      "metadata": {
        "description": "The CFS Block Id you want to push status updates to"
      }
    },
    "scenarioName": {
      "type": "string",
      "metadata": {
        "description": "Enter a short name to describe the managed scenario"
      }
    },
    "githubRepoOwner": {
      "type": "string",
      "metadata": {
        "description": "Enter the owner of the repo (i.e. CloudFitSoftware)"
      }
    },
    "githubRepoName": {
      "type": "string",
      "metadata": {
        "description": "Enter the url of the github repo to monitor (i.e. cfs-stale-app-service-monitor)"
      }
    },
    "minutesBetweenRuns": {
      "type": "int",
      "defaultValue": 5,
      "metadata": {
          "description": "Time in minutes between runs."
      }
    },
    "minutesBeforeStale": {
      "type": "int",
      "defaultValue": 30,
      "metadata": {
          "description": "Time in minutes before a pull request is considered stale."
      }
    },
    "githubPersonalAccessToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Your github PAT (Optional, required if private repo)"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2019-12-01",
      "name": "[concat('cfs-github-pr-monitor-', parameters('scenarioName'))]",
      "location": "[resourceGroup().location]",
      "properties": {
        "containers": [
          {
            "name": "[concat('cfs-github-pr-monitor-', parameters('scenarioName'))]",
            "properties": {
              "image": "cfsintegrations.azurecr.io/cfs-github-pr-monitor:latest",
              "ports": [],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              },
              "environmentVariables": [
                {
                  "name": "GITHUB_REPO_OWNER",
                  "value": "[parameters('githubRepoOwner')]"
                },
                {
                  "name": "GITHUB_REPO_NAME",
                  "value": "[parameters('githubRepoName')]"
                },
                {
                  "name": "GITHUB_PAT",
                  "value": "[parameters('githubPersonalAccessToken')]"
                },
                {
                  "name": "CFS_BASE_URL",
                  "value": "[parameters('cfsBaseUrl')]"
                },
                {
                  "name": "CFS_BLOCK_ID",
                  "value": "[parameters('cfsBlockId')]"
                },
                {
                  "name": "MINUTES_BETWEEN_RUNS",
                  "value": "[parameters('minutesBetweenRuns')]"
                },
                {
                  "name": "MINUTES_BEFORE_STALE",
                  "value": "[parameters('minutesBeforeStale')]"
                }
              ]
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[parameters('acrServer')]",
            "username": "[parameters('acrAdminUsername')]",
            "password": "[parameters('acrAdminPassword')]"
          }
        ],
        "osType": "Linux",
        "restartPolicy": "Always"
      }
    }
  ],
  "outputs": {}
}
